QMenu {
    padding: 2px;
    background: #2C2E33;
    min-width: 150px;
}

QMenu::item {
    padding: 4px 12px;
    font-size: 13px;
    width: 100%;
    border-radius: 4px;
    background: transparent;
}

QMenu::item:selected {
    background: #228be6;
}

QMenu::separator {
    background: #495057;
    height: 0.05em;
    margin: 2px 0px;
}

QPushButton {
    background: red;
}