

QPushButton {
    border: 0;
    border-radius: 4px;
    background: #1971c2;
    padding: 8px;
    font-weight: bold;
    font-size: 12px;
}

QPushButton:hover {
    background: #1864ab;
}

QLabel {
    color: #c9c9c9;
    font-weight: bold;
}

QLineEdit {
    border: 1px solid #424242;
    border-radius: 4px;
    padding: 6px 8px;
    background: #2e2e2e;
}

QLineEdit:hover, QLineEdit:focus {
    border: 1px solid #1971c2;
}
